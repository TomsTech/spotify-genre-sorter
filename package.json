{
  "name": "spotify-genre-sorter",
  "version": "3.7.0",
  "description": "Organise your Spotify liked songs into genre-based playlists",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "build": "wrangler deploy --dry-run --outdir=dist",
    "build:frontend": "node scripts/build-frontend.mjs",
    "deploy": "wrangler deploy",
    "tail": "wrangler tail",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "check": "npm run lint && npm run typecheck",
    "setup": "node scripts/setup.mjs",
    "version:sync": "node scripts/sync-version.mjs",
    "version:check": "node scripts/sync-version.mjs --check",
    "version:set": "node scripts/sync-version.mjs",
    "docs:build": "node scripts/build-docs.mjs",
    "docs:check": "node scripts/build-docs.mjs --check",
    "backup:kv": "node scripts/backup-kv.mjs",
    "restore:kv": "node scripts/restore-kv.mjs",
    "kv:export": "node scripts/kv-export.mjs",
    "kv:import": "node scripts/kv-import.mjs",
    "kv:sync": "npm run kv:export && npm run kv:import",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:ci": "playwright install chromium && playwright test --project=chromium",
    "dev:e2e": "wrangler dev --config wrangler.e2e.toml --local --port 8787",
    "e2e:install": "playwright install chromium",
    "deps:check": "node scripts/check-deps.mjs",
    "test:report": "node scripts/generate-test-report.mjs",
    "check:size": "node scripts/check-bundle-size.mjs --warn-threshold=1500 --fail-threshold=2000"
  },
  "dependencies": {
    "hono": "^4.11.7"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250525.0",
    "@playwright/test": "^1.57.0",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^8.57.0",
    "md-to-pdf": "^5.2.4",
    "msw": "^2.7.0",
    "typescript": "^5.6.0",
    "vitest": "^4.0.14",
    "wrangler": "^4.51.0"
  },
  "engines": {
    "node": ">=18"
  }
}
