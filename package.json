{
  "name": "spotify-genre-sorter",
  "version": "2.0.1",
  "description": "Organise your Spotify liked songs into genre-based playlists",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "build": "wrangler deploy --dry-run --outdir=dist",
    "build:frontend": "node scripts/build-frontend.mjs",
    "deploy": "wrangler deploy",
    "tail": "wrangler tail",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "check": "npm run lint && npm run typecheck",
    "setup": "node scripts/setup.mjs",
    "version:sync": "node scripts/sync-version.mjs",
    "version:check": "node scripts/sync-version.mjs --check",
    "version:set": "node scripts/sync-version.mjs",
    "docs:build": "node scripts/build-docs.mjs",
    "docs:check": "node scripts/build-docs.mjs --check"
  },
  "dependencies": {
    "@sentry/cloudflare": "^10.28.0",
    "hono": "^4.6.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250525.0",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^8.57.0",
    "md-to-pdf": "^5.2.4",
    "typescript": "^5.6.0",
    "vitest": "^4.0.14",
    "wrangler": "^4.51.0"
  },
  "engines": {
    "node": ">=18"
  }
}
